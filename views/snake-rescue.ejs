<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Snake Rescue & Handler</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
  </head>
  <body
    class="bg-gradient-to-br from-teal-50 via-blue-50 to-pink-50 min-h-screen font-sans text-gray-800"
  >
    <!-- Top Navbar -->
    <header
      class="w-full bg-teal-600 text-white px-6 py-4 shadow-md flex justify-between items-center"
    >
      <div class="flex items-center gap-8">
        <h1 class="text-xl font-bold">PetCare || Snake Rescue & Handling</h1>
        <nav class="flex gap-6 text-sm">
          <a href="#" class="hover:text-green-300">Emergency Tips</a>
        </nav>
      </div>
      <!-- Back Button with Underline Hover Animation -->
      <a
        href="/dashboard"
        class="group relative inline-block text-white font-semibold text-lg px-4 py-2 overflow-hidden"
        data-aos="fade-right"
      >
        <span class="relative z-10">← Back</span>
        <span
          class="absolute left-0 bottom-0 h-0.5 w-full bg-white transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 ease-in-out origin-left"
        ></span>
      </a>
    </header>

    <!-- Main Content -->
    <main class="px-8 py-10 space-y-8">
      <!-- Title -->
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-3xl font-bold">Snake Handler & Rescue Dashboard</h2>
      </div>

      <!-- City Input -->
      <section class="bg-white p-6 rounded-xl shadow-md" data-aos="fade-down">
        <h3 class="text-xl font-semibold mb-4">Search by Area / City</h3>
        <div class="flex gap-4">
          <input
            type="text"
            placeholder="Enter city or area name..."
            class="flex-1 px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-teal-500"
          />
          <button
            class="bg-teal-600 text-white px-6 py-3 rounded-lg hover:bg-green-700 transition hover-glow"
          >
            Search
          </button>
        </div>
      </section>

      <!-- Snake Handlers -->
      <section>
        <h3 class="text-2xl font-semibold mb-4" data-aos="fade-up">
          Available Snake Handlers
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Card 1 -->
          <div
            class="glass p-6 rounded-xl shadow-md hover:scale-105 transition"
            data-aos="fade-up"
          >
            <h4 class="text-xl font-bold text-green-700 mb-1">
              Shivaji Snake Rescue
            </h4>
            <p class="text-sm text-gray-600 mb-2">Area: Nanded City</p>
            <p class="text-sm">📞 +91-9876543210</p>
          </div>

          <!-- Card 2 -->
          <div
            class="glass p-6 rounded-xl shadow-md hover:scale-105 transition"
            data-aos="fade-up"
            data-aos-delay="100"
          >
            <h4 class="text-xl font-bold text-blue-700 mb-1">
              Green Snake Team
            </h4>
            <p class="text-sm text-gray-600 mb-2">Area: Loha</p>
            <p class="text-sm">📞 +91-9823456789</p>
          </div>

          <!-- Card 3 -->
          <div
            class="glass p-6 rounded-xl shadow-md hover:scale-105 transition"
            data-aos="fade-up"
            data-aos-delay="200"
          >
            <h4 class="text-xl font-bold text-pink-700 mb-1">
              Sarp Mitra Rescue
            </h4>
            <p class="text-sm text-gray-600 mb-2">Area: Latur</p>
            <p class="text-sm">📞 +91-9123456780</p>
          </div>
        </div>
      </section>
    </main>

    <!-- AOS Animation -->
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
      AOS.init({ duration: 800, once: true });
    </script>
  </body>
</html>
