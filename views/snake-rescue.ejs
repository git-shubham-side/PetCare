<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Snake Rescue & Handler</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
  </head>
  <style>
    footer {
      position: sticky;
      bottom: 0;
      width: 100%;
    }
  </style>
  <body
    class="bg-gradient-to-br from-teal-50 via-blue-50 to-pink-50 min-h-screen font-sans text-gray-800"
  >
    <!-- Nav -->
    <header
      class="w-full bg-teal-500 text-white px-6 py-4 shadow-md flex justify-between items-center"
    >
      <div class="flex items-center gap-8">
        <h1 class="text-xl font-bold">PetCare || Snake Rescue & Handling</h1>
        <nav class="flex gap-6 text-sm">
          <a href="#" class="hover:text-green-300 transition">Emergency Tips</a>
        </nav>
      </div>
      <!-- Back Button  -->
      <a
        href="/dashboard"
        class="group relative inline-block text-white font-semibold text-lg px-4 py-2 overflow-hidden"
        data-aos="fade-right"
      >
        <span class="relative z-10">‚Üê Back</span>
        <span
          class="absolute left-0 bottom-0 h-0.5 w-full bg-white transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 ease-in-out origin-left"
        ></span>
      </a>
    </header>

    <!-- Main  -->
    <main class="px-8 py-10 space-y-8">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-3xl font-bold">Snake Handler & Rescue Dashboard</h2>
      </div>

      <!-- Search -->
      <section class="bg-white p-6 rounded-xl shadow-md" data-aos="fade-down">
        <h3 class="text-xl font-semibold mb-4">Search by City</h3>
        <div class="flex flex-col sm:flex-row gap-4">
          <form action="/petcare/find" method="post">
            <select
              class="flex-1 px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-teal-500"
              name="city"
            >
              <option value="" disabled selected>Select a city...</option>
              <option value="All" name="all">All</option>
              <option value="Nanded" name="Nanded">Nanded</option>
              <option value="Pune" name="Pune">Pune</option>
              <option value="Mumbai" name="Mumbai">Mumbai</option>
              <option value="Nashik" name="Nashik">Nashik</option>
              <option value="Latur" name="Latur">Latur</option>
            </select>
            <button
              class="bg-teal-600 text-white px-6 py-3 rounded-lg hover:bg-teal-500 transition duration-200"
              type="submit"
            >
              Search
            </button>
          </form>
        </div>
      </section>

      <section>
        <h3 class="text-2xl font-semibold mb-4" data-aos="fade-up">
          Available Snake Handlers in <%= data.city %>
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% for(let user of data){ %>
          <div
            class="bg-white p-6 rounded-xl shadow-md hover:shadow-xl hover:scale-105 transition transform"
            data-aos="fade-up"
          >
            <h4 class="text-xl font-bold text-black mb-1"><%= user.name %></h4>
            <p class="text-sm"><strong>City:</strong> <%= user.city %></p>
            <p class="text-sm text-gray-600 mb-2">
              <strong>Area:</strong> <%= user.area %>
            </p>
            <p class="text-sm"><strong>Contact:</strong> <%= user.contact %></p>
          </div>
          <% } %>
        </div>
      </section>
    </main>
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
      AOS.init({ duration: 800, once: true });
    </script>

    <footer class="bg-gray-800 text-white text-center py-6">
      <p>
        &copy; <%= new Date().getFullYear() %> PetCare. All rights reserved.
      </p>
    </footer>
  </body>
</html>
