        </p>
      </section>

      <!-- Breed Cards -->
      <section class="p-8 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% breeds.forEach(function(breed) { %>
        <div class="card flex flex-col">
          <div
            class="bg-white flex items-center justify-center"
            style="height: 200px"
          >
            <img
              src="<%= breed.image %>"
              alt="<%= breed.name %>"
              style="max-height: 100%; max-width: 100%; object-fit: contain"
            />
          </div>
          <div class="p-4 flex flex-col flex-grow">
            <h3 class="text-xl font-semibold text-teal-600 mb-2">
              <%= breed.name %>
            </h3>
            <p class="text-gray-700 flex-grow"><%= breed.description %></p>
            <p class="marathi"><%= breed.marathi_desc %></p>
          </div>
        </div>
        <% }) %>
      </section>

      <!-- Footer -->
      <footer class="bg-gray-800 text-white text-center py-4">
        <p>
          &copy; <%= new Date().getFullYear() %> PetCare. All Rights Reserved.
        </p>
      </footer>
    </main>

    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
      AOS.init({ duration: 100, once: true });
    </script>
  </body>
</html>
