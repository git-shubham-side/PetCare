<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Your Pet's Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/profile.css" />
  </head>
  <body class="p-0">
    <!-- Navbar -->
    <nav class="bg-teal-500 p-4 shadow-md">
      <div class="max-w-7xl mx-auto flex justify-between items-center">
        <div class="flex items-center">
          <span class="text-xl font-bold text-white">
            <a href="/dashboard">&#128062; PetCare</a>
          </span>
        </div>
        <a href="/dashboard" class="text-white text-lg"> ‚Üê Back to Home </a>
      </div>
    </nav>

    <!-- Main Container -->
    <div class="p-6 md:p-10">
      <!-- Pet Details Card -->
      <div
        class="max-w-5xl mx-auto bg-white rounded-2xl shadow-lg p-8 mb-8 card-hover"
      >
        <div
          class="flex flex-col sm:flex-row items-center sm:items-start gap-8"
        >
          <!-- Pet Image -->
          <div
            class="w-40 h-40 sm:w-48 sm:h-48 rounded-full overflow-hidden border-4 border-teal-300 shadow-lg"
          >
            <img
              src="<%= pet.photo %>"
              alt="petImage"
              class="w-full h-full object-cover"
              onerror="this.onerror=null;this.src='https://placehold.co/200x200/cccccc/333333?text=Pet+Image';"
            />
          </div>

          <!-- Pet Info -->
          <div class="flex-grow text-center sm:text-left">
            <h1
              class="text-3xl font-extrabold text-gray-800 mb-4 flex items-center justify-center sm:justify-start"
            >
              <i> <%= pet.petName %></i>
              <span class="ml-2 text-2xl"><%= pet.emoji%></span>
            </h1>
            <div
              class="grid grid-cols-1 sm:grid-cols-2 gap-4 text-gray-700 text-lg"
            >
              <p><span class="font-semibold">Breed:</span> <%= pet.breed %></p>
              <p>
                <span class="font-semibold">Age:</span> <%= pet.age %> Years
              </p>
              <p>
                <span class="font-semibold">Gender:</span> <%= pet.gender %>
              </p>
              <p>
                <span class="font-semibold">Species:</span> <%= pet.species %>
              </p>
              <p><span class="font-semibold">Color:</span> <%= pet.color %></p>
              <p>
                <span class="font-semibold">DOB:</span> <%=
                pet.dateOfBirth.toString().slice(0,15) %>
              </p>
              <p class="sm:col-span-2">
                <span class="font-semibold">Responsible Vet:</span> <%=
                pet.responsibleVet %>
              </p>
              <p class="sm:col-span-2">
                <span class="font-semibold">Medical History:</span> <%=
                pet.medicalHistory %>
              </p>
            </div>

            <!-- Action Buttons -->
            <div
              class="mt-6 flex flex-col sm:flex-row gap-4 justify-center sm:justify-start"
            >
              <form action="/hospitals" method="GET">
                <button type="submit" class="btn-custom">
                  Book Appointment
                </button>
              </form>
              <form action="/edit-profile/<%= pet._id %>" method="get">
                <button
                  type="submit"
                  class="btn-custom bg-yellow-500 hover:bg-yellow-600"
                >
                  Edit Details
                </button>
              </form>
              <form
                action="/delete-profile/<%= pet._id%>?_method=DELETE"
                method="post"
              >
                <button
                  type="submit"
                  class="btn-custom bg-red-500 hover:bg-red-600"
                >
                  Delete Profile
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>

      <!-- Owner Details -->
      <div
        class="max-w-5xl mx-auto bg-white rounded-2xl shadow-lg p-8 card-hover"
      >
        <h2 class="text-2xl font-bold text-gray-800 mb-4">Owner Details</h2>
        <div
          class="grid grid-cols-1 sm:grid-cols-2 gap-4 text-lg text-gray-700"
        >
          <p><span class="font-semibold">Name:</span> <%= pet.ownerName %></p>
          <p><span class="font-semibold">Phone:</span> <%= pet.phone %></p>
          <p><span class="font-semibold">Address:</span> <%= pet.address %></p>
          <p>
            <span class="font-semibold">District:</span> <%= pet.district %>
          </p>
          <p><span class="font-semibold">State:</span> <%= pet.state %></p>
        </div>
      </div>
    </div>
  </body>
</html>
